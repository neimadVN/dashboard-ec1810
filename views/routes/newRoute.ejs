<div class="form-group">
    <label for="diemDi">Điểm đi:</label>
    <div class="row">
        <div class="col-sm-6">
            <select id="diemDi" name="diemDi" autocomplete="off" class="form-control mw-100" onchange="diaDiemFunction('diemDi')"
                required group-input-data-parsley>
                <% dsDiaDiem.forEach(diem => { %>
                <option value="<%= diem.huyenTinh %>">
                    <%= diem.huyenTinh %>
                </option>
                <% }); %>
                <option value="" class="text-active">- Địa điểm khác -</option>
            </select>
        </div>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="diemDiMoi" placeholder="Nhập một điểm đi mới" disabled />
        </div>
    </div>
</div>

